{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "lib": [
      "ES2015",
      "ES2016",
      "ESNext"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": false,
    "target": "es2016",
    "paths": {
      "leet-core": [
        "./plugins/leet-core/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}